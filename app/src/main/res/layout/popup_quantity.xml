<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/poup_background">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Jumlah Pembelian"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtJumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jumlah"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="15dp"
                android:background="@drawable/textinputlayout_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/btnBatal"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:text="Batalkan"
                    android:textSize="15dp"
                    android:background="@drawable/bg_btn_cancel"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp" />
                <Button
                    android:id="@+id/btnLanjutkan"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:text="Lanjutkan"
                    android:textSize="15dp"
                    android:background="@drawable/bg_btn_yes"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </LinearLayout>




</LinearLayout>
