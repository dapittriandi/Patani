<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cartItemOption"
    android:background="@color/lightEl"
    android:elevation="1dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/white">


            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/greenbean"
                android:background="@color/white"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Nama:"
                        android:textColor="@color/grey"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="GREEN Bean KERINCI"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kuantitas: "
                        android:textSize="10sp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/kuantitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1 Kg"
                        android:textStyle="bold"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga: "
                        android:textSize="10sp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:text="Rp. 60.000"
                        android:textStyle="bold"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/kurangiJumlahProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="14dp"
                android:visibility="gone"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/gtyAdjust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="1"
                android:visibility="gone"
                android:layout_marginRight="3dp"

                android:textSize="12dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tambahJumlahProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginLeft="3dp"
                android:textSize="14dp"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/dropProdukFromCart"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_hapus_cart"
                android:textColor="@color/white"
                android:text="Hapus"
                android:textSize="10sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3CDCD" />

    </LinearLayout>

</LinearLayout>